#:kivy 2.0.0

<MenuScreen>:
    FloatLayout:
        MDLabelCenter:
            text: "Bienvenido"
            font_size: 70
            
            pos_hint: {"x":.42, "y":0.75}
            size_hint: 0.20, 0.20
            height: 100

        Image:
            source: 'ICONS/Logo.jpeg'
            pos_hint: {"x":.04, "y":0.75}
            size_hint: 0.20, 0.20

        PicButton:
            source: "ICONS/icon_1.png"
            size_hint_y: 0.30
            size_hint_x: 0.30
            pos_hint: {"x": -0.02, "y": 0.23}
            on_press: root.manager.SMEntry()

        PicButton:
            source: "ICONS/icon_2.png"
            size_hint_y: 0.30
            size_hint_x: 0.30
            pos_hint: {"x": 0.23, "y": 0.23}
            on_press: root.manager.SMAppointments()

        PicButton:
            source: "ICONS/icon_3.png"
            size_hint_y: 0.30
            size_hint_x: 0.30
            pos_hint: {"x": 0.47, "y": 0.23}
            on_press: root.manager.SMInfo()

        PicButton:
            source: "ICONS/icon_4.png"
            size_hint_y: 0.30
            size_hint_x: 0.30
            pos_hint: {"x": 0.71, "y": 0.23}
            on_press: root.manager.SMsurvey()
