                    CheckBox:
                        id: improvement_quality_2
                        size_hint: (0.05, 0.05)
                        group: 'improvement_quality'
                    CheckBox:
                        id: improvement_quality_3
                        size_hint: (0.05, 0.05)
                        group: 'improvement_quality'

            FloatLayout:
                size_hint: .2, .25

            MDRaisedButton:
                text: 'Submit'
                on_release: pass
                size_hint: .1, .2

    FloatLayout:
        PicButton:
            source: "ICONS/go_back.png"
            size_hint_y: 0.1
            size_hint_x: 0.1
            pos_hint: {"x": -0.01, "y": 0.005}
            on_press: root.manager.SMMainScreen()
