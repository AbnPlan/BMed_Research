                    CheckBox:
                        id: rating_visual_3
                        size_hint: (0.05, 0.05)
                        group: 'rating_visual'
                    CheckBox:
                        id: rating_visual_4
                        size_hint: (0.05, 0.05)
                        group: 'rating_visual'

                    MDLabelCenter:
                        text: 'Instrucciones de uso'
                        font_size: 18

                    CheckBox:
                        id: rating_user_friendly_1
                        size_hint: (0.05, 0.05)
                        group: 'rating_user_friendly'
                    CheckBox:
                        id: rating_user_friendly_2
                        size_hint: (0.05, 0.05)
                        group: 'rating_user_friendly'
                    CheckBox:
                        id: rating_user_friendly_3
                        size_hint: (0.05, 0.05)
                        group: 'rating_user_friendly'
                    CheckBox:
                        id: rating_user_friendly_4
                        size_hint: (0.05, 0.05)
                        group: 'rating_user_friendly'

                    MDLabelCenter:
                        text: 'Funcionabilidad'
                        font_size: 18

                    CheckBox:
                        id: rating_functionality_1
                        size_hint: (0.05, 0.05)
                        group: 'rating_functionality'
                    CheckBox:
                        id: rating_functionality_2
                        size_hint: (0.05, 0.05)
                        group: 'rating_functionality'
                    CheckBox:
                        id: rating_functionality_3
                        size_hint: (0.05, 0.05)
                        group: 'rating_functionality'
                    CheckBox:
                        id: rating_functionality_4
                        size_hint: (0.05, 0.05)
                        group: 'rating_functionality'

            BoxLayout:
                orientation: 'vertical'
                id: lt5

                MDLabelCenter:
                    text:
                        '7. Por favor, marque de las áreas mencionadas cual le gustaría mejoraran.'
                    font_size: 18

                GridLayout:
                    cols: 4
                    rows: 4
                    spacing: 10

                    MDLabelCenter:
                        text: ''
                        font_size: 18
                    MDLabelCenter:
                        text: 'Importante'
                        font_size: 18
                    MDLabelCenter:
                        text: 'Neutro'
                        font_size: 18
                    MDLabelCenter:
                        text: 'No es importante'
                        font_size: 18
                    MDLabelCenter:
                        text: 'Tamaño de la pantalla'
                        font_size: 18

                    CheckBox:
                        id: improvement_size_1
                        size_hint: (0.05, 0.05)
                        group: 'improvement_size'
                    CheckBox:
                        id: improvement_size_2
                        size_hint: (0.05, 0.05)
                        group: 'improvement_size'
                    CheckBox:
                        id: improvement_size_3
                        size_hint: (0.05, 0.05)
                        group: 'improvement_size'

