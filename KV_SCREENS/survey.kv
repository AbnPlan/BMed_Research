#:kivy 2.0.0

<Survey>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            padding: 10
            spacing: 20
            cols: 1
            size_hint_y: None
            height: 3000
            MDLabelCenter:
                text: "Survey"
                font_size: 25
                halign: "center"
                size_hint: 0.20, 0.20
            BoxLayout:
                id: lt0
                orientation: 'vertical'
                MDLabelCenter:
                    text: '1. ¿Cómo calificaría su experiencia general con el servicio?'
                    font_size: 20
                    halign: "center"

                BoxLayout:
                    orientation: 'horizontal'
                    MDLabelCenter:
                        text: '1'
                        font_size: 18
                    MDLabelCenter:
                        text: '2'
                        font_size: 18
                    MDLabelCenter:
                        text: '3'
                        font_size: 18
                    MDLabelCenter:
                        text: '4'
                        font_size: 18
                    MDLabelCenter:
                        text: '5'
                        font_size: 18
                    
                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        id: q_0_0
                        group: 'q_0'
                    CheckBox:
                        id: q_0_1
                        group: 'q_0'
                    CheckBox:
                        id: q_0_2
                        group: 'q_0'
                    CheckBox:
                        id: q_0_3
                        group: 'q_0'
                    CheckBox:
                        id: q_0_4
                        group: 'q_0'
                        

                BoxLayout:
                    orientation: 'horizontal'
                    MDLabelCenter:
                        text: 'Peor'
                        font_size: 18
                        
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                        
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                        
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                        
                    MDLabelCenter:
                        text: 'Mejor'
                        font_size: 18
                        
            BoxLayout:
                id: lt1
                orientation: 'vertical'
                MDLabelCenter:
                    text:
                        '2. ¿Considera que nuestro sistema satisface sus necesidades?'
                    font_size: 20
                    
                BoxLayout:
                    orientation: 'horizontal'
                    MDLabelCenter:
                        text: '1'
                        font_size: 18
                    MDLabelCenter:
                        text: '2'
                        font_size: 18
                    MDLabelCenter:
                        text: '3'
                        font_size: 18
                    MDLabelCenter:
                        text: '4'
                        font_size: 18
                    
                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        id: q_1_0
                        group: 'q_1'
                    CheckBox:
                        id: q_1_1
                        group: 'q_1'
                    CheckBox:
                        id: q_1_2
                        group: 'q_1'
                    CheckBox:
                        id: q_1_3
                        group: 'q_1'

                BoxLayout:
                    orientation: 'horizontal'
                    MDLabelCenter:
                        text: 'Existen Mejores Opciones'
                        font_size: 18
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                    MDLabelCenter:
                        text: 'Totalmente Satisfactoria'
                        font_size: 18

            BoxLayout:
                id: lt2
                orientation: 'vertical'
                MDLabelCenter:
                    text:
                        '3. ¿Como es la calidad de la información provista?'
                    font_size: 20

                BoxLayout:
                    orientation: 'horizontal'
                    MDLabelCenter:
                        text: '1'
                        font_size: 18
                    MDLabelCenter:
                        text: '2'
                        font_size: 18
                    MDLabelCenter:
                        text: '3'
                        font_size: 18
                    MDLabelCenter:
                        text: '4'
                        font_size: 18

                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        id: q_2_0
                        group: 'q_2'
                    CheckBox:
                        id: q_2_1
                        group: 'q_2'
                    CheckBox:
                        id: q_2_2
                        group: 'q_2'
                    CheckBox:
                        id: q_2_3
                        group: 'q_2'

                BoxLayout:
                    orientation: 'horizontal'
                    MDLabelCenter:
                        text: 'Baja'
                        font_size: 18
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                    MDLabelCenter:
                        text: 'Alta'
                        font_size: 18

            BoxLayout:
                id: lt3
                orientation: 'vertical'
                MDLabelCenter:
                    text:
                        '4. ¿Cuál es la probabilidad de que vuelva a utilizar nuestro sistema en el futuro?'
                    font_size: 20

                BoxLayout:
                    orientation: 'horizontal'
                    MDLabelCenter:
                        text: '1'
                        font_size: 18
                    MDLabelCenter:
                        text: '2'
                        font_size: 18
                    MDLabelCenter:
                        text: '3'
                        font_size: 18
                    MDLabelCenter:
                        text: '4'
                        font_size: 18

                BoxLayout:
                    orientation: 'horizontal'
                    CheckBox:
                        id: q_3_0
                        group: 'q_3'
                    CheckBox:
                        id: q_3_1
                        group: 'q_3'
                    CheckBox:
                        id: q_3_2
                        group: 'q_3'
                    CheckBox:
                        id: q_3_3
                        group: 'q_3'

                BoxLayout:
                    orientation: 'horizontal'
                    MDLabelCenter:
                        text: 'No probable'
                        font_size: 18
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                    MDLabelCenter:
                        text: ''
                        font_size: 18
                    MDLabelCenter:
                        text: 'Muy probable'
                        font_size: 18

            BoxLayout:
                id: lt6
                orientation: 'vertical'
                MDLabelCenter:
                    text: '5. ¿Tiene algún comentario adicional para nosotros?'
                    font_size: 18

                TextInput:
                    id: comments
                    hint_text: ''
                    multiline: True

            BoxLayout:
                orientation: 'vertical'
                id: lt4

                MDLabelCenter:
                    text:
                        '6. ¿Cómo calificaría nuestro sistema en las siguientes áreas? '
                    font_size: 20

                GridLayout:
                    cols: 5
                    rows: 5
                    spacing: 10

                    MDLabelCenter:
                        text: ''
                        font_size: 18
                    MDLabelCenter:
                        text: 'Insatisfecho'
                        font_size: 18
                    MDLabelCenter:
                        text: 'Neutro'
                        font_size: 18
                    MDLabelCenter:
                        text: 'Satisfecho'
                        font_size: 18
                    MDLabelCenter:
                        text: 'Muy Satisfecho'
                        font_size: 18
                    MDLabelCenter:
                        text: 'Calidad'
                        font_size: 18

                    CheckBox:
                        id: rating_quality_1
                        size_hint: (0.05, 0.05)
                        group: 'rating_quality'
                    CheckBox:
                        id: rating_quality_2
                        size_hint: (0.05, 0.05)
                        group: 'rating_quality'
                    CheckBox:
                        id: rating_quality_3
                        size_hint: (0.05, 0.05)
                        group: 'rating_quality'
                    CheckBox:
                        id: rating_quality_4
                        size_hint: (0.05, 0.05)
                        group: 'rating_quality'

                    MDLabelCenter:
                        text: 'Atractivo Visual'
                        font_size: 18

                    CheckBox:
                        id: rating_visual_1
                        size_hint: (0.05, 0.05)
                        group: 'rating_visual'
                    CheckBox:
                        id: rating_visual_2
                        size_hint: (0.05, 0.05)
