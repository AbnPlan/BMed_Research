#:kivy 2.0.0

<Appointments>:
    on_enter: root.clear()
    FloatLayout:
        # Title
        MDLabelCenter:
            text: "Citas"
            font_size: 50
            
            pos_hint: {"x":.42, "y":0.80}
            size_hint: 0.20, 0.20
            height: 100

        # Name Info
        MDLabelCenter:
            text: 'Nombre:'
            pos_hint: {"x": -0.05, "y": 0.78}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        TextInput:
            id: a_full_name
            hint_text: 'Nombre'
            size_hint: (0.20, 0.05)
            pos_hint: {"x": 0.12, "y": 0.78}
            multiline: False

        # Urgency Level
        MDLabelCenter:
            text: 'Nivel de emergencia:'
            pos_hint: {"x": -0.009, "y": 0.70}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        PicButton:
            source: "ICONS/Urgency/Urgency1.png"
            size_hint_y: 0.10
            size_hint_x: 0.10
            pos_hint: {"x": 0.02, "y": 0.58}
            on_press: root.ids.urgency_lvl1.state = 'down'
        CheckBox:
            id: urgency_lvl1
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.045, "y": 0.53}
            group: 'urgency'
            
        PicButton:
            source: "ICONS/Urgency/Urgency2.png"
            size_hint_y: 0.10
            size_hint_x: 0.10
            pos_hint: {"x": 0.1, "y": 0.58}
            on_press: root.ids.urgency_lvl2.state = 'down'
        CheckBox:
            id: urgency_lvl2
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.125, "y": 0.53}
            group: 'urgency'
            
        PicButton:
            source: "ICONS/Urgency/Urgency3.png"
            size_hint_y: 0.10
            size_hint_x: 0.10
            pos_hint: {"x": 0.18, "y": 0.58}
            on_press: root.ids.urgency_lvl3.state = 'down'
        CheckBox:
            id: urgency_lvl3
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.205, "y": 0.53}
            group: 'urgency'
            
        PicButton:
            source: "ICONS/Urgency/Urgency4.png"
            size_hint_y: 0.10
            size_hint_x: 0.10
            pos_hint: {"x": 0.26, "y": 0.58}
            on_press: root.ids.urgency_lvl4.state = 'down'
        CheckBox:
            id: urgency_lvl4
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.285, "y": 0.53}
            group: 'urgency'
            
        PicButton:
            source: "ICONS/Urgency/Urgency5.png"
            size_hint_y: 0.10
            size_hint_x: 0.10
            pos_hint: {"x": 0.34, "y": 0.58}
            on_press: root.ids.urgency_lvl5.state = 'down'
        CheckBox:
            id: urgency_lvl5
            size_hint: (0.03, 0.05)
            pos_hint: {"x": 0.375, "y": 0.53}
            group: 'urgency'
            

        # Symptoms
        MDLabelCenter:
            text: 'Presenta algunos de estos sintomas?'
            pos_hint: {"x": 0.50, "y": 0.755}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Si'
            pos_hint: {"x": 0.70, "y": 0.755}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'No'
            pos_hint: {"x": 0.75, "y": 0.755}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Fiebre'
            pos_hint: {"x": 0.50, "y": 0.70}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Tos'
            pos_hint: {"x": 0.50, "y": 0.65}
            size_hint: (.25, .05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Dificultad para respirar (falta de aire)'
            pos_hint: {"x": 0.50, "y": 0.60}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Escalofríos continuos'
            pos_hint: {"x": 0.50, "y": 0.55}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Temblores'
            pos_hint: {"x": 0.50, "y": 0.50}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Dolor muscular'
            pos_hint: {"x": 0.50, "y": 0.45}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Dolor de cabeza'
            pos_hint: {"x": 0.50, "y": 0.40}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Dolor de garganta'
            pos_hint: {"x": 0.50, "y": 0.35}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        MDLabelCenter:
            text: 'Pérdida reciente del olfato o el gusto'
            pos_hint: {"x": 0.50, "y": 0.30}
            size_hint: (0.25, 0.05)
            font_size: 15
            
        CheckBox:
            id: fiebre_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.70}
            group: 'fiebre'
            
        CheckBox:
            id: fiebre_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.70}
            group: 'fiebre'
            
        CheckBox:
            id: tos_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.65}
            group: 'tos'
            
        CheckBox:
            id: tos_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.65}
            group: 'tos'
            
        CheckBox:
            id: diff_resp_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.60}
            group: 'diff_resp'
            
        CheckBox:
            id: diff_resp_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.60}
            group: 'diff_resp'
            
        CheckBox:
            id: escalofrios_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.55}
            group: 'escalofrios'
            
        CheckBox:
            id: escalofrios_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.55}
            group: 'escalofrios'
            
        CheckBox:
            id: temblores_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.50}
            group: 'temblores'
            
        CheckBox:
            id: temblores_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.50}
            group: 'temblores'
            
        CheckBox:
            id: dolor_muscular_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.45}
            group: 'dolor_muscular'
            
        CheckBox:
            id: dolor_muscular_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.45}
            group: 'dolor_muscular'
            
        CheckBox:
            id: dolor_cabeza_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.40}
            group: 'dolor_cabeza'
            
        CheckBox:
            id: dolor_cabeza_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.40}
            group: 'dolor_cabeza'
            
        CheckBox:
            id: dolor_garganta_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.35}
            group: 'dolor_garganta'
            
        CheckBox:
            id: dolor_garganta_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.35}
            group: 'dolor_garganta'
            
        CheckBox:
            id: perdida_olfato_gusto_yes
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.80, "y": 0.30}
            group: 'perdida_olfato_gusto'
            
        CheckBox:
            id: perdida_olfato_gusto_no
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.85, "y": 0.30}
            group: 'perdida_olfato_gusto'
            active: False
        PicButton:
            source: "ICONS/go_back.png"
            size_hint_y: 0.1
            size_hint_x: 0.1
            pos_hint: {"x": -0.01, "y": 0.005}
            on_press: root.manager.SMMainScreen()
        #Service Required
        PicButton:
            source: "ICONS/ServiceRequired/ServiceRequired1.png"
            size_hint_y: 0.25
            size_hint_x: 0.25
            pos_hint: {"x": 0.00, "y": 0.20}
            on_press: root.ids.service1.state = 'down'
        PicButton:
            source: "ICONS/ServiceRequired/ServiceRequired2.png"
            size_hint_y: 0.25
            size_hint_x: 0.25
            pos_hint: {"x": 0.20, "y": 0.20}
            on_press: root.ids.service2.state = 'down'
        CheckBox:
            id: service1
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.10, "y": 0.12}
            group: 'service'
            
        CheckBox:
            id: service2
            size_hint: (0.05, 0.05)
            pos_hint: {"x": 0.30, "y": 0.12}
            group: 'service'
            

        #Submit
        MDRaisedButton:
            id: submit_form
            text: 'Submit'
            size_hint: (0.10, 0.10)
            pos_hint: {"x": 0.45, "y": 0.005}
            on_press:
                if root.show_popup(): root.save_form(); root.manager.SMMainScreen()

