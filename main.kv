#:kivy 2.0.0

<MenuScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: "Bienvenido"
        font_size: 50
        color: 0,0,0,1
        pos_hint: {"x":.42, "y":0.80}
        size_hint: 0.20, 0.20
        height: 100
        anchor_x:'center'
        anchor_y:'top'
        
    MainButtons:
        source: "icon_1.png"
        size_hint_y: 0.30
        size_hint_x: 0.30
        anchor_x:'center'
        anchor_y:'center'
        pos_hint: {"x": -0.02, "y": 0.23} 
        on_press: root.manager.current = 'entry'

    MainButtons:
        source: "icon_2.png"
        size_hint_y: 0.30
        size_hint_x: 0.30
        anchor_x:'center'
        anchor_y:'center'
        pos_hint: {"x": 0.23, "y": 0.23}
        on_press: root.manager.current = 'appointments'

    MainButtons:
        source: "icon_3.png"
        size_hint_y: 0.30
        size_hint_x: 0.30
        anchor_x:'center'
        anchor_y:'center'
        pos_hint: {"x": 0.47, "y": 0.23}
        on_press: root.manager.current = 'survey'

    MainButtons:
        source: "icon_4.png"
        size_hint_y: 0.30
        size_hint_x: 0.30
        anchor_x:'center'
        anchor_y:'center'
        pos_hint: {"x": 0.71, "y": 0.23}
        on_press: root.manager.current = 'info'


