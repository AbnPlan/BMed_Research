#:kivy 1.11.1

<MenuScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: "Bienvenido"
        color: 0,0,0,1
        pos_hint: {"x":.45, "y":0.80} 
        size_hint: (.2, .2)
        
    ImageButton:
        source: "icon_1.png"
        size_hint_y: 0.25
        size_hint_x: 0.25
        pos_hint: {"x": .10, "y": 0.30} 
        on_press: root.manager.current = 'entry'

    ImageButton:
        source: "icon_2.png"
        size_hint_y: 0.25
        size_hint_x: 0.25
        pos_hint: {"x": 0.30, "y": 0.30}
        on_press: root.manager.current = 'appointments'

    ImageButton:
        source: "icon_3.png"
        size_hint_y: 0.25
        size_hint_x: 0.25
        pos_hint: {"x": 0.50, "y": 0.30}
        on_press: root.manager.current = 'survey'

    ImageButton:
        source: "icon_4.png"
        size_hint_y: 0.25
        size_hint_x: 0.25
        pos_hint: {"x": 0.70, "y": 0.30}
        on_press: root.manager.current = 'info'


<EntryForm>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: "Entry Form"
        color: 0,0,0,1
        pos_hint: {"x":.45, "y":0.80} 
        size_hint: (.20, .20)
        valign: 'middle'
    
    Button:
        text:'Back'
        size_hint_y: 0.05
        size_hint_x: 0.05
        pos_hint: {"x": 0, "y": 0}
        on_press: root.manager.current = 'menu'

<Appointments>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: "Appointments"
        color: 0,0,0,1
        pos_hint: {"x":.45, "y":0.80} 
        size_hint: (.20, .20)
        valign: 'middle'

<Survey>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: "Survey"
        color: 0,0,0,1
        pos_hint: {"x":.45, "y":0.80} 
        size_hint: (.20, .20)

<Info>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: "Info"
        color: 0,0,0,1
        pos_hint: {"x":.45, "y":0.80} 
        size_hint: (.20, .20)
    
    Button:
        text:'Back'
        size_hint_y: 0.05
        size_hint_x: 0.05
        pos_hint: {"x": 0, "y": 0}
        on_press: root.manager.current = 'menu'
