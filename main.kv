#:kivy 2.0.0

<MyScreenManager>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            
<MDLabelCenter@MDLabel>:
    halign: "center"   

<Fail>:
    MDLabelCenter:
        text: '\n\nFalta informacion para completar forma'
        size_hint: .6, .2
        pos_hint: {'x': 0.2, 'top': 1}

<Success>:
    MDLabelCenter:
        text: '\n\nForma completada y guardada'
        size_hint: .6, .1
        pos_hint: {'x': 0.2, 'top': 1}

