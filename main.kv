#:kivy 2.0.0

<MyScreenManager>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MenuScreen:
        name:'menu'
    EntryForm:
        name:'entry'
    Appointments:
        name:'appointments'
    Survey:
        name:'survey'
    Info:
        name:'info'

<MenuScreen>:
    FloatLayout:
        Label:
            text: "Bienvenido"
            font_size: 70
            color: 0,0,0,1
            pos_hint: {"x":.42, "y":0.75}
            size_hint: 0.20, 0.20
            height: 100

        Image:
            source: 'ICONS/Logo.jpeg'
            pos_hint: {"x":.04, "y":0.75}
            size_hint: 0.20, 0.20

            
        PicButton:
            source: "ICONS/icon_1.png"
            size_hint_y: 0.30
            size_hint_x: 0.30
            pos_hint: {"x": -0.02, "y": 0.23} 
            on_press: root.manager.SMEntry()

        PicButton:
            source: "ICONS/icon_2.png"
            size_hint_y: 0.30
            size_hint_x: 0.30

            pos_hint: {"x": 0.23, "y": 0.23}
            on_press: root.manager.SMAppointments()

        PicButton:
